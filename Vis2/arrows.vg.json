{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {"view": {"stroke": null}},
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/msul0022/3179/refs/heads/main/Vis2/PetrolProportion.csv"
  },
  "transform": [
    {"filter": "datum['Year'] == 2023"},
    {
      "joinaggregate": [
        {"op": "mean", "field": "Income", "as": "AverageIncome"}
      ]
    },
    {
      "calculate": "datum.Income - datum.AverageIncome",
      "as": "IncomeDifference"
    },
    {"calculate": "abs(datum.IncomeDifference)", "as": "AbsoluteDifference"}
  ],
  "encoding": {
    "y": {
      "field": "State",
      "type": "ordinal",
      "sort": {"field": "Proportion", "order": "descending"},
      "axis": {"domain": false, "grid": false, "ticks": false, "offset": 20, "title": null, "labelAlign": "center"}
    }
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "color": "green",
        "size": 1,
        "shape": "arrow",
        "opacity": 1
      },
      "encoding": {
        "size": {
          "field": "AbsoluteDifference",
          "type": "quantitative",
          "legend": null
        },
        "color": {
          "condition": {
            "test": "datum['IncomeDifference'] > 0",
            "value": "#4BA962"
          },
          "value": "#CC2031"
        },
        "angle": {
          "condition": {"test": "datum['IncomeDifference'] > 0", "value": 0},
          "value": 180
        },
        "x": {"value": -100}
      }
    },
    {
      "mark": {"type": "text", "xOffset": -125, "align": "right"},
      "encoding": {
        "text": {
          "field": "IncomeDifference",
          "type": "quantitative",
          "format": "$,.0f"
        }
      }
    },
    {
      "encoding": {
        "size": {"field": "Proportion", "type": "quantitative", "legend": null},
        "tooltip": [
          {
            "field": "Proportion",
            "type": "quantitative",
            "title": "Percent of Weekly Income:",
            "format": ".2f"
          },
          {"field": "State", "type": "nominal", "title": "State:"},
          {"field": "Year", "type": "quantitative", "title": "Year:"}
        ],
        "x": {"value": 40}
      },
      "mark": {
        "type": "point",
        "color": "#FFD200",
        "size": 1,
        "shape": "m 2.6953125,0 -0.15625,0.1796875 0.296875,0.2734375 c 0.0090525,0.009053 0.0214,0.021173 0.03125,0.03125 l -0.0625,0.0703125 C 2.704633,0.65474205 2.77642225,0.7842333 2.8125,0.8203125 L 3,1.0078125 3,2.5 c 0,0.25 -0.098034,0.25 -0.125,0.25 C 2.848034,2.75 2.75,2.75 2.75,2.5 L 2.75,1.5 C 2.75,1.1797729 2.5,1 2.25,1 L 2.25,0.5 C 2.25,0.7241741 2.14381825,0.25 2,0.25 L 0.5,0.25 C 0.35018925,0.25 0.25,0.35618165 0.25,0.5 l 0,3 2,0 0,-2.25 c 0,0 0.25,0 0.25,0.25 l 0,1 c 0,0.5 0.3099245,0.5 0.375,0.5 0.068913,0 0.375,0 0.375,-0.5 L 3.25,0.75 C 3.25,0.5 3.17849575,0.50244595 3.09375,0.3671875 L 2.6953125,0 z M 0.5,0.75 2,0.75 2,1.5 0.5,1.5 0.5,0.75 z",
        "opacity": 1
      }
    },
    {
      "mark": {"type": "text", "xOffset": 60},
      "encoding": {
        "text": {"value": {"expr": "datum.Proportion + '%'"}}
      }
    }
  ]
}
