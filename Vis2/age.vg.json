{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A bar chart with negative values. We can hide the axis domain line, and instead use a conditional grid color to draw a zero baseline.",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/msul0022/3179/refs/heads/main/Vis2/age.csv"
  },
  "params": [
    {
      "name": "choose_type",
      "value": ["Fulltime"],
      "bind": {
        "input": "select",
        "options": [["Fulltime"], ["Parttime"]],
        "labels": ["Fulltime", "Parttime"],
        "name": "Type of Work: "
      }
    }
  ],
  "title": {"text": {"expr": "'Average Weekly Income Earned by Age for ' + choose_type + ' Workers'"}},
  "mark": "bar",
  "transform": [
    {"filter": "datum['Work_Type'] == choose_type"},
    {
      "joinaggregate": [
        {"op": "mean", "field": "Weekly_Income", "as": "avg_income"}
      ]
    },
    {"calculate": "datum.Weekly_Income-datum.avg_income", "as": "difference"}
  ],
  "encoding": {
    "x": {
      "field": "Age",
      "type": "nominal",
      "axis": {
        "title": "Age Group",
        "domain": false,
        "ticks": false,
        "labelAngle": 0,
        "labelPadding": 4
      }
    },
    "y": {
      "field": "difference",
      "type": "quantitative",
      "axis": {
        "title": "Difference from Average",
        "gridColor": {
          "condition": {"test": "datum.value === 0", "value": "black"},
          "value": "#ddd"
        }
      }
    },
    "color": {
      "condition": {"test": "datum['difference'] > 0", "value": "#4BA962"},
      "value": "#CC2031"
    },
    "tooltip": [
      {
        "field": "difference",
        "type": "quantitative",
        "title": "Difference from Average:",
        "format": "$,.0f"
      },
      {"field": "Age", "type": "nominal", "title": "Age Range:"}
    ]
  }
}
