{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Comparison pyramid of basket price and income.",
  "title": {"text": {"expr": "'Petrol income graph for ' + year_selection"}},
  "data": {
    "url": "https://raw.githubusercontent.com/msul0022/3179/refs/heads/main/Vis2/PetrolProportion.csv"
  },
  "params": [
    {
      "name": "year_selection",
      "value": 2023,
      "bind": {
        "input": "select",
        "options": [2020, 2021, 2022, 2023, 2024],
        "name": "Select Year: "
      }
    }
  ],
  "spacing": 0,
  "vconcat": [
    {
      "transform": [{"filter": "datum['Year'] == year_selection"}],
      "width": 400,
      "encoding": {"x": {"field": "State", "type": "ordinal", "axis": null}},
      "layer": [
        {
          "encoding": {
            "size": {
              "field": "Proportion",
              "type": "quantitative",
              "legend": null
            },
            "tooltip": [
              {
                "field": "Proportion",
                "type": "quantitative",
                "title": "Percent of Weekly Income:",
                "format": ".2f"
              },
              {"field": "State", "type": "nominal", "title": "State:"},
              {"field": "Year", "type": "quantitative", "title": "Year:"}
            ]
          },
          "mark": {
            "type": "point",
            "color": "#FFD200",
            "size": 1,
            "shape": "m 2.6953125,0 -0.15625,0.1796875 0.296875,0.2734375 c 0.0090525,0.009053 0.0214,0.021173 0.03125,0.03125 l -0.0625,0.0703125 C 2.704633,0.65474205 2.77642225,0.7842333 2.8125,0.8203125 L 3,1.0078125 3,2.5 c 0,0.25 -0.098034,0.25 -0.125,0.25 C 2.848034,2.75 2.75,2.75 2.75,2.5 L 2.75,1.5 C 2.75,1.1797729 2.5,1 2.25,1 L 2.25,0.5 C 2.25,0.7241741 2.14381825,0.25 2,0.25 L 0.5,0.25 C 0.35018925,0.25 0.25,0.35618165 0.25,0.5 l 0,3 2,0 0,-2.25 c 0,0 0.25,0 0.25,0.25 l 0,1 c 0,0.5 0.3099245,0.5 0.375,0.5 0.068913,0 0.375,0 0.375,-0.5 L 3.25,0.75 C 3.25,0.5 3.17849575,0.50244595 3.09375,0.3671875 L 2.6953125,0 z M 0.5,0.75 2,0.75 2,1.5 0.5,1.5 0.5,0.75 z",
            "opacity": 1
          }
        },
        {
          "mark": "text",
          "encoding": {"text": {"field": "Proportion", "type": "quantitative"}}
        }
      ]
    },
    {
      "transform": [
        {"filter": "datum['Year'] == year_selection"},
        {
          "joinaggregate": [
            {"op": "mean", "field": "TankDollars", "as": "AverageTank"}
          ]
        }
      ],
      "width": 400,
      "layer": [
        {
          "mark": {"type": "bar", "clip": true},
          "encoding": {
            "x": {"field": "State"},
            "y": {
              "aggregate": "sum",
              "field": "TankDollars",
              "title": "Average Petrol Price (cents/tank)",
              "axis": {"format": "s"},
              "scale": {"zero": false}
            },
            "color": {
              "field": "Type",
              "scale": {"range": ["#FFD200"]},
              "legend": null
            },
            "tooltip": [
              {
                "field": "TankDollars",
                "type": "quantitative",
                "title": "Dollars:",
                "format": "$,.2f"
              },
              {"field": "State", "type": "nominal", "title": "State"},
              {"field": "Year", "type": "quantitative", "title": "Year"}
            ]
          }
        },
        {
          "mark": {"type": "rule", "color": "#B00180"},
          "encoding": {"y": {"field": "AverageTank", "type": "quantitative"}}
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "yOffset": -10,
            "xOffset": 0,
            "color": "#B00180"
          },
          "encoding": {
            "text": {"value": "Average Tank"},
            "y": {"field": "AverageTank", "type": "quantitative"}
          }
        }
      ]
    }
  ],
  "config": {"view": {"stroke": null}, "axis": {"grid": false}}
}
