{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/msul0022/3179/refs/heads/main/Week%2010%20HW/aus_industry_income.csv"
  },
  "params": [
    {
      "name": "year_selection",
      "value": 2023,
      "bind": {
        "input": "select",
        "options": [2020, 2021, 2022, 2023, 2024],
        "name": "Select Year: "
      }
    }
  ],
  "title": {"text": {"expr": "'Average Weekly Income Earned by Industry for ' + year_selection"}},
  "transform": [
    {"filter": "datum['Year'] == year_selection"},
    {
      "joinaggregate": [
        {"op": "mean", "field": "Income", "as": "AverageIncome"}
      ]
    }
  ],
  "layer": [
    {
      "mark": {"type": "bar", "color": "#4BA962"},
      "transform": [
        {"calculate": "toString('$' + datum.Income)", "as": "Dollars"}
      ],
      "encoding": {
        "x": {
          "field": "Income",
          "type": "quantitative",
          "title": "Weekly Income ($)"
        },
        "y": {"field": "Industry", "type": "ordinal", "sort": "-x"},
        "tooltip": [
          {"field": "Dollars", "type": "nominal"},
          {"field": "Industry", "type": "ordinal"},
          {"field": "Year", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {"type": "rule", "color": "#B00180"},
      "encoding": {
        "x": {
          "aggregate": "average",
          "field": "AverageIncome",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "yOffset": 150,
        "xOffset": 5,
        "color": "#B00180"
      },
      "encoding": {
        "text": {"value": "Average Weekly Income"},
        "x": {
          "aggregate": "average",
          "field": "AverageIncome",
          "type": "quantitative"
        }
      }
    }
  ]
}
